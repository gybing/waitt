<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.unit8.waitt.examples</groupId>
    <artifactId>struts2-example</artifactId>
    <packaging>war</packaging>
    <version>1.0</version>
    <name>struts2-example</name>

    <properties>
        <waittVersion>0.3.1</waittVersion>
        <struts2Version>2.3.16.3</struts2Version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>net.unit8.maven.plugins</groupId>
                <artifactId>waitt-maven-plugin</artifactId>
                <version>${waittVersion}</version>
                <configuration>
                    <webapps>
                        <webapp>
                            <path>/db</path>
                            <groupId>net.unit8</groupId>
                            <artifactId>teslogger-db-inspection</artifactId>
                            <version>0.1.0-SNAPSHOT</version>
                            <configuration>
                                <teslogger.db.url>jdbc:oracle:thin:scott/tiger@localhost:1521/XE</teslogger.db.url>
                            </configuration>
                            <dependencies>
                                <dependency>
                                    <groupId>com.oracle</groupId>
                                    <artifactId>ojdbc6</artifactId>
                                    <version>11.2.0</version>
                                </dependency>
                            </dependencies>
                        </webapp>
                    </webapps>
                </configuration>

            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.struts</groupId>
            <artifactId>struts2-core</artifactId>
            <version>${struts2Version}</version>
        </dependency>
    </dependencies>
</project>
